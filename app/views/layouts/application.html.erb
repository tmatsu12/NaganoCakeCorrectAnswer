<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCakeCorrectAnswer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if admin_signed_in? %>
      <header class="admin_header">
        <div class="header-content">
          <%= link_to 'NaganoCake', admin_top_path, class: "logo" %>
          <ul class="flex">
            <li><%= link_to '商品一覧', admin_items_path %></li>
            <li><%= link_to '会員一覧', admin_customers_path %></li>
            <li><%= link_to '注文履歴一覧', admin_orders_path %></li>
            <li><%= link_to 'ジャンル管理', "" %></li>
            <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
          </ul>
        </div>
      </header>
    <% end %>

    <main>
      <%= yield %>
    </main>

    <footer>Copyright © Infratop Inc. All Rights Reserved.</footer>
  </body>
</html>
